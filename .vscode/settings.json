{
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"[html]": {
		"editor.formatOnSave": true
	},
	"[scss]": {
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true
	},
	"[taxon4]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": false,
		"editor.wordWrap": "wordWrapColumn",
		"editor.wordWrapColumn": 110,
		"editor.rulers": [120],
		"editor.foldingStrategy": "indentation",
		"editor.guides.indentation": false,
		"editor.stickyScroll.enabled": false
	},
	"material-icon-theme.folders.associations": {
		"web-extension": "plugin",
		"vscode-extension": "plugin"
	},
	"material-icon-theme.files.associations": {
		"*.taxon4": "deno"
	},
	"css.lint.unknownAtRules": "ignore",
	"scss.lint.unknownAtRules": "ignore",
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["text.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["indigo.taxon4"],
				"settings": { "foreground": "#a5b4fc" }
			},
			{
				"scope": ["pink.taxon4"],
				"settings": { "foreground": "#f472b6" }
			},
			{
				"scope": ["orange.taxon4"],
				"settings": { "foreground": "#fdba74" }
			},
			{
				"scope": ["blue.taxon4"],
				"settings": { "foreground": "#93c5fd" }
			},
			{
				"scope": ["green.taxon4"],
				"settings": { "foreground": "#6ee7b7" }
			},
			{
				"scope": ["fuchsia.taxon4"],
				"settings": { "foreground": "#f0abfc" }
			},
			{
				"scope": ["yellow.taxon4"],
				"settings": { "foreground": "#fde68a" }
			},
			{
				"scope": ["white.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["slate.taxon4"],
				"settings": { "foreground": "#94a3b8", "fontStyle": "" }
			},
			{
				"scope": ["gray.taxon4"],
				"settings": { "foreground": "#a8a29e", "fontStyle": "" }
			}
		]
	}
}
