{
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 100,
	"files.readonlyInclude": {
		"dist/**":true,
		"dist-web-extension/**":true,
		"vscode-extension/extension.js":true
	},
	"[html]": {
		"editor.formatOnSave": true
	},
	"[scss]": {
		"editor.formatOnSave": true
	},
	"[javascript]": {
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true
	},
	"[taxon4]": {
		"editor.fontFamily": "sans-serif",
		"editor.fontSize": 16,
		"editor.tabSize": 3,
		"editor.lineHeight": 1.3,
		"editor.letterSpacing": 0.2,
		"editor.insertSpaces": false,
		"editor.wordWrap": "wordWrapColumn",
		"editor.wordWrapColumn": 150,
		"editor.foldingStrategy": "indentation",
		"editor.guides.indentation": false,
		"editor.minimap.renderCharacters": true,
		"editor.stickyScroll.enabled": false
	},
	"material-icon-theme.folders.associations": {
		"web-extension": "middleware",
		"vscode-extension": "plugin",
		"dist-web-extension": "dist"
	},
	"material-icon-theme.files.associations": {
		"*.taxon4": "gradle"
	},
	"scss.lint.unknownAtRules": "ignore",
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["text.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["rose.taxon4"],
				"settings": { "foreground": "#fb7185" }
			},
			{
				"scope": ["indigo.taxon4"],
				"settings": { "foreground": "#a5b4fc" }
			},
			{
				"scope": ["pink.taxon4"],
				"settings": { "foreground": "#f472b6" }
			},
			{
				"scope": ["orange.taxon4"],
				"settings": { "foreground": "#fdba74" }
			},
			{
				"scope": ["blue.taxon4"],
				"settings": { "foreground": "#93c5fd" }
			},
			{
				"scope": ["green.taxon4"],
				"settings": { "foreground": "#6ee7b7" }
			},
			{
				"scope": ["fuchsia.taxon4"],
				"settings": { "foreground": "#f0abfc" }
			},
			{
				"scope": ["yellow.taxon4"],
				"settings": { "foreground": "#fde68a" }
			},
			{
				"scope": ["white.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["violet.taxon4"],
				"settings": { "foreground": "#c4b5fd" }
			},
			{
				"scope": ["slate.taxon4"],
				"settings": { "foreground": "#94a3b8", "fontStyle": "" }
			},
			{
				"scope": ["gray.taxon4"],
				"settings": { "foreground": "#a8a29e", "fontStyle": "" }
			}
		]
	}
}
