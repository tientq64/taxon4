{
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.wordWrap": "bounded",
	"editor.wordWrapColumn": 100,
	"files.readonlyInclude": {
		"dist/**": true,
		"dist-web-extension/**": true,
		"vscode-extension/extension.js": true,
		"public/locales/translations/*": true,
		"src/constants/dataPartNames.ts": true,
		"backups/*": true
	},
	"search.exclude": {
		"node_modules": true,
		"backups": true,
		"temp": true,
		"dist": true,
		"dist-web-extension": true
	},
	"editor.codeActionsOnSave": {
		"source.addMissingImports.ts": "explicit",
		"source.organizeImports": "explicit",
		"source.fixAll.ts": "explicit"
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"[html]": {
		"editor.formatOnSave": true
	},
	"[tailwindcss]": {
		"editor.formatOnSave": true
	},
	"[javascript]": {
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true
	},
	"[yaml]": {
		"editor.formatOnSave": true
	},
	"[taxon4]": {
		// "editor.fontFamily": "sans-serif",
		// "editor.fontSize": 16,
		// "editor.tabSize": 3,
		// "editor.lineHeight": 1.3,
		// "editor.letterSpacing": 0.2,
		// "editor.wordWrapColumn": 150,
		// "editor.foldingStrategy": "indentation",
		// "editor.fontFamily": "NK57 Monospace, Arial monospaced for SAP, IBM Plex Mono",
		// "editor.fontSize": 16,
		// "editor.letterSpacing": 0.5,
		// "editor.fontFamily": "Archivo, sans-serif",
		// "editor.fontSize": 16,
		// "editor.tabSize": 5,
		// "editor.letterSpacing": 0,
		// "editor.wordWrapColumn": 240,
		"editor.tabSize": 2,
		"editor.wordWrapColumn": 120,
		// "editor.wordWrapColumn": 140,
		"editor.wordWrap": "wordWrapColumn",
		"editor.rulers": [130],
		"editor.insertSpaces": false,
		"editor.guides.indentation": false,
		"editor.stickyScroll.enabled": false,
		// "editor.folding": false,
		// "editor.minimap.enabled": false
	},
	"github.copilot.enable": {
		"taxon4": false
	},
	"material-icon-theme.folders.associations": {
		"web-extension": "middleware",
		"vscode-extension": "plugin",
		"dist-web-extension": "dist"
	},
	"material-icon-theme.files.associations": {
		"*.taxon4": "gradle"
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["text.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["rose.taxon4"],
				"settings": { "foreground": "#fb7185" }
			},
			{
				"scope": ["indigo.taxon4"],
				"settings": { "foreground": "#a5b4fc" }
			},
			{
				"scope": ["pink.taxon4"],
				"settings": { "foreground": "#f472b6" }
			},
			{
				"scope": ["orange.taxon4"],
				"settings": { "foreground": "#fdba74" }
			},
			{
				"scope": ["red.taxon4"],
				"settings": { "foreground": "#fca5a5" }
			},
			{
				"scope": ["blue.taxon4"],
				"settings": { "foreground": "#93c5fd" }
			},
			{
				"scope": ["green.taxon4"],
				"settings": { "foreground": "#6ee7b7" }
			},
			{
				"scope": ["fuchsia.taxon4"],
				"settings": { "foreground": "#f0abfc" }
			},
			{
				"scope": ["yellow.taxon4"],
				"settings": { "foreground": "#fed7aa" }
			},
			{
				"scope": ["white.taxon4"],
				"settings": { "foreground": "#ffffff" }
			},
			{
				"scope": ["violet.taxon4"],
				"settings": { "foreground": "#c4b5fd" }
			},
			{
				"scope": ["slate.taxon4"],
				"settings": { "foreground": "#94a3b8", "fontStyle": "" }
			},
			{
				"scope": ["gray.taxon4"],
				"settings": { "foreground": "#a8a29e", "fontStyle": "" }
			},
			{
				"scope": [
					"comment",
					"punctuation.definition.comment",
					"entity.other.attribute-name.tsx",
					"entity.other.attribute-name.ts",
					"keyword.control.import",
					"keyword.control.from",
					"keyword.control.export",
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	}
}
